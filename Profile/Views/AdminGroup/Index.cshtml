@using Profile.Models.Database
@model List<Group>

@{
    ViewBag.Title = "Groups list";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="header list-header ">
    Groups list
</div>

<div class="table-wrapper">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th class="column-small">Change date</th>
                <th class="column-small">Members count</th>
                <th>Rank</th>
                <th>Karma</th>
                <th>Avatar</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(d => line.Name)</td>
                    <td>@line.DateOfChange.ToString("dd/MM/yyyy")</td>
                    <td>@Html.DisplayFor(d => line.CountMembers)</td>
                    <td>@Html.DisplayFor(d => line.Rank)  </td>
                    <td>@Html.DisplayFor(d => line.Karma) </td>
                    <td><img src="@Url.Content(line.ImageProgectLinkPath)" width="150" height="150"/></td>
                    <td>
                        @using (Html.BeginForm("Edit", "AdminGroup", line))
                        {
                            <input class="button-table button-table-create" type="submit" value="Modify" />
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Delete", "AdminGroup", line))
                        {
                            <input class="button-table button-table-delete" type="submit" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="margin : 20px 800px 50px 0;">
        @Html.ActionLink("Create group", "Create", null, new { @class = "button button-link" })
    </div>
</div>



